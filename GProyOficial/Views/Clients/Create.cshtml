                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", required = "required", title = "Este campo es requerido" } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.identifAbrev, "Abreviatura", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.identifAbrev, new { htmlAttributes = new { @class = "form-control", required = "required", title = "Este campo es requerido" } })
                                        @Html.ValidationMessageFor(model => model.identifAbrev, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.organismId, "Organismo", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.DropDownList("organismId", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.organismId, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.reup, "Código Reup", htmlAttributes: new {@class = "control-label col-md-2", style = "width: 150px ; text-align: left;"})
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.reup, new { htmlAttributes = new { @class = "form-control", required = "required", title = "Este campo es requerido" } })
                                        @Html.ValidationMessageFor(model => model.reup, "", new {@class = "text-danger"})
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.legalPerson, "Personalidad Jurídica", htmlAttributes: new { @class = "control-label col-md-2", style = "width: 150px ; text-align: left;" })
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.CheckBoxFor(model => model.legalPerson)
                                        @Html.ValidationMessageFor(model => model.legalPerson, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>

                    <td>
                        <table class="form-group">
                            <tr>
                                <td style="width: 25%">
                                    @Html.LabelFor(model => model.agent, "Representante", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.agent, new { htmlAttributes = new { @class = "form-control", required = "required", title = "Este campo es requerido" } })
                                        @Html.ValidationMessageFor(model => model.agent, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.agentPosition, "Cargo Representante", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.agentPosition, new { htmlAttributes = new { @class = "form-control", required = "required", title = "Este campo es requerido" } })
                                        @Html.ValidationMessageFor(model => model.agentPosition, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.telephone, "Teléfono", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "form-control", required = "required", title = "Este campo es requerido" } })
                                        @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.email, "Correo", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", required = "required", title = "Este campo es requerido" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.dateCreation, "Día de Creación", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    <div class="input-group input-medium date date-picker" data-date-format="dd-mm-yyyy" data-date-start-date="+0d">
                                        <input type="text" class="form-control" readonly id="dateCreation" name="dateCreation">
                                        <span class="input-group-btn">
                                            <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>

        <div class="form-group" style="width: 30%"></div>

        <div class="form-group">
            <table class="form-group">
                <tr>
                    <td style="border-right: 1px solid #000000;">
                        <label class="control-label col-md-2">Dirección</label>
                    </td>
                    <td>
                        <table class="form-group">
                            <tr>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.street, new { htmlAttributes = new { @class = "form-control", placeholder = "Calle",required="required",title="Este campo es requerido" } })
                                    @Html.ValidationMessageFor(model => model.street, "", new { @class = "text-danger" })
                                </div>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control", placeholder = "Municipio", required = "required", title = "Este campo es requerido" } })
                                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                                </div>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.province, new { htmlAttributes = new { @class = "form-control", placeholder = "Provincia", required = "required", title = "Este campo es requerido" } })
                                    @Html.ValidationMessageFor(model => model.province, "", new { @class = "text-danger" })
                                </div>
                            </tr>
                            <tr style="height: 8px"></tr>
                            <tr>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.country, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "País", required = "required", title = "Este campo es requerido" } })
                                    @Html.ValidationMessageFor(model => model.country, "", new { @class = "text-danger" })
                                </div>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>


        <div>
            <div class="form-group">
                @Html.LabelFor(model => model.isSubject, "Subordinada a alguna empresa?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox" id="checkBoxSubject">
                        @Html.CheckBoxFor(model => model.isSubject, htmlAttributes: new { @id = "client_isSubject"})
                        @Html.ValidationMessageFor(model => model.isSubject, "", new { @class = "text-danger" })
                       
                    </div>
                </div>
            </div>

            <div class="form-group" id="checkBoxFather" style="display: none">
                
                <div class="form-group">
                    <label class="control-label col-md-3">Empresa</label>
                    <div class="col-md-4">
                        <select class="form-control input-large select2me" data-placeholder="Seleccione una Empresa" id="clientFather" name="clientFather">
                            <option value=""></option>
                            @foreach (var item in ViewBag.fatherId)
                            {
                                <option value=@item.clientId>@item.name</option>
                            }
                        </select>
                       
                    </div>
                </div>
            </div>
        </div>
        <div>
            <ul class="nav nav-tabs" id="myTab">
                <li class="active"><a href="" class="control-label">Cuentas Bancarias</a></li>
            </ul>
            <div id="myTabContent" class="tab-content">
                <div class="tab-pane fade in active" id="home">
                    <table class="table table-bordered" id="table">
                        <thead>
                            <tr>
                                <th>
                                    Número de cuenta
                                </th>
                                <th>
                                    Nombre del banco
                                </th>
